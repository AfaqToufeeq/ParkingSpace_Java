            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/poppins_semibold"
                android:padding="6dp"
                android:text="@string/looking_for_a_parking"
                android:textColor="@color/header_main_color"
                android:textSize="18dp"
                />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:columnOrderPreserved="false"
                android:rowCount="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/carParking_CV"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginRight="13dp"
                    app:cardElevation="8dp"
                    android:elevation="7dp"
                    app:cardBackgroundColor="#FFF7DF"
                    app:cardCornerRadius="6dp"
                    android:layout_gravity="center"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Car Parking"
                            android:layout_marginTop="5dp"
                            android:textSize="18dp"
                            android:layout_marginLeft="7dp"
                            android:layout_gravity="left"
                            android:textColor="@color/header_main_color" />

                        <ImageView
                            android:id="@+id/car"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:src="@drawable/car2" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/bikeParking_CV"
                    android:layout_width="160dp"
