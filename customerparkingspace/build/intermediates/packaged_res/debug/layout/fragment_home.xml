        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            android:elevation="6dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="6dp"
