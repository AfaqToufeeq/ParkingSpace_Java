                    android:visibility="gone"
                    app:cardCornerRadius="6dp"
                    android:layout_marginRight="20dp"
                    app:cardBackgroundColor="#F2EEFF"
                    android:elevation="7dp"
                    android:padding="4dp">

                    <LinearLayout
