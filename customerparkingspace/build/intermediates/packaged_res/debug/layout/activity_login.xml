<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.developer.parkingspace.ui.activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pinkbackground"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView"
            android:shadowColor="#72630909"
            android:shadowDx="0"
            android:shadowDy="0"
            android:padding="4dp"
            android:shadowRadius="50"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:letterSpacing="0.08"
            android:text="Welcome! "
            android:fontFamily="@font/aclonica"
            android:textSize="26sp"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="12sp"
            android:layout_marginRight="12sp"
            android:gravity="center"
            android:text="@string/while_some_people_have_important_appointments_and_there_might_be_some_congestion_where_they_want_to_go_the_project_s_purpose_is_to_save_time_and_make_finding_a_park_easier_hence_the_parking_is_reserved_to_prevent_time_from_being_spent"
            android:textColor="@color/white"
            android:textSize="11.5sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@drawable/lightblue_btn"
                android:text="@string/parking_spaces"
                android:textColor="#fff"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_whatsapp"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_weight="0.5"
                android:elevation="10dp"
                app:civ_circle_background_color="@color/black"
                android:src="@drawable/whatsapp_logo" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Sign In"
            android:padding="6dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22sp"
            android:fontFamily="sans-serif-condensed-medium"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            app:boxBackgroundColor="@color/white"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/email_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:drawableRight="@drawable/email"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Email Address"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:passwordToggleEnabled="true"
            app:boxBackgroundColor="@color/white"
            >

            <EditText
                android:id="@+id/pass_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginLeft="24dp"
                android:hint="Password"
                android:layout_marginRight="24dp"
                android:drawableLeft="@drawable/ic_lock_black"
                android:drawablePadding="10dp"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/forgetpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textStyle="italic"
                android:padding="3dp"
                android:text="Forget Password?"
                android:textColor="#333333"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginBtn"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@drawable/darkblue_btn"
                android:drawableRight="@drawable/ic_send_black"
                android:drawablePadding="10dp"
                android:elevation="16dp"
                android:fontFamily="@font/aclonica"
                android:text="Log in"

                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="17dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="____________More Options____________"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signupBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/blue_btn"
            android:text="Create New Account"
            android:fontFamily="@font/aclonica"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            />

        <!--        <androidx.appcompat.widget.AppCompatButton-->
        <!--            android:id="@+id/googlebtn"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginLeft="24dp"-->
        <!--            android:layout_marginRight="24dp"-->
        <!--            android:layout_marginTop="15dp"-->
        <!--            android:background="@drawable/darkblue_btn"-->
        <!--            android:text="Continue with Google + "-->
        <!--            android:elevation="16dp"-->
        <!--            android:textAllCaps="false"-->
        <!--            android:textColor="#FFFFFF"-->
        <!--            android:backgroundTint="#DB4437"-->
        <!--            android:fontFamily="@font/aclonica"-->
        <!--            android:textSize="16dp"-->
        <!--            />-->

    </LinearLayout>

</LinearLayout>