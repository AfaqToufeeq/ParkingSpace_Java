    <androidx.cardview.widget.CardView
        android:id="@+id/parentCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_50sdp"
        android:visibility="visible"
        android:padding="@dimen/_150sdp"
        android:elevation="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_30sdp"
        app:cardElevation="@dimen/_15sdp"
        app:cardMaxElevation="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:elevation="4dp"
                app:cardCornerRadius="30dp"
                app:cardMaxElevation="10dp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/AreaImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:background="@color/lightgray"
                    android:src="@drawable/add_item_icon" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/AreaName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:hint="Area Name"
                    android:textColorHint="#68000000"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/AreaDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.8"
                    android:textColorHint="@color/gray"
                    android:hint="Description"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="italic" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/uploadButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_30sdp"
                android:paddingRight="@dimen/_30sdp"
                android:paddingLeft="40dp"
                android:fontFamily="@font/googlesans_bold"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:drawableRight="@drawable/iv_arrow"
                android:background="@drawable/green_btn"
                android:text="Upload Data" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>