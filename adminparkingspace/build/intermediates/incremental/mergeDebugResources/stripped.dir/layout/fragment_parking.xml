<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA"
    android:orientation="vertical"
    tools:context="app.developer.adminparkingspace.ui.fragments.ParkingFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/parentToolBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#EBFFFFFF"
        android:elevation="10dp"
        app:cardElevation="6dp">
        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/back2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:visibility="gone"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_back"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="Parking lot"
                android:textColor="@color/pinkShade"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/CityCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="80dp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="16dp"
        android:visibility="visible"
        app:cardMaxElevation="16dp"
        android:elevation="@dimen/_15sdp"
        android:background="#FAFAFA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City Name"
                android:gravity="left"
                android:textSize="22dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/colorPrimaryDark" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                app:boxBackgroundColor="@color/white"
                android:focusableInTouchMode="true">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:hint="Enter city name"
                    android:id="@+id/cityID_ET"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Area Name"
                android:layout_marginTop="40dp"
                android:gravity="left"
                android:textSize="22dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/colorPrimaryDark" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                app:boxBackgroundColor="@color/white"
                android:focusableInTouchMode="true">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:hint="Enter area name"
                    android:id="@+id/areaID_ET"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/search_btn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/green_btn"
                android:layout_gravity="center"
                android:elevation="16dp"
                android:paddingRight="@dimen/_50sdp"
                android:paddingLeft="@dimen/_50sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:text="Search"
                android:drawableRight="@drawable/iv_search"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="24dp"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ParkingCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="80dp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="16dp"
        android:visibility="gone"
        app:cardMaxElevation="16dp"
        android:elevation="@dimen/_15sdp"
        android:background="#FAFAFA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available parking slots"
                android:gravity="left"
                android:textSize="22dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:layout_marginLeft="10dp"
                android:padding="4dp"
                android:inputType="number"
                android:text="Slots: 0"
                android:id="@+id/parkingSlot_TV"
                android:textSize="20sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add parking slots"
                android:layout_marginTop="40dp"
                android:gravity="left"
                android:textSize="22dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/colorPrimaryDark" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                app:boxBackgroundColor="@color/white"
                android:focusableInTouchMode="true">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:hint="Enter number of slots "
                    android:id="@+id/parkingID_ET"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addSlot_btn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/green_btn"
                android:layout_gravity="center"
                android:elevation="16dp"
                android:paddingRight="@dimen/_50sdp"
                android:paddingLeft="@dimen/_50sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:text="Add slots"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="24dp"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>