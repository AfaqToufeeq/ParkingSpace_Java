<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="30dp"
    android:layout_gravity="center"
    app:cardElevation="16dp"
    app:cardMaxElevation="16dp"
    android:background="#FAFAFA"
    android:orientation="vertical"
    tools:context="app.developer.adminparkingspace.ui.activities.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        android:layout_marginBottom="30dp"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView

            android:id="@+id/textView"
            android:elevation="16dp"
            android:textColor="#C423283A"
            android:layout_width="210dp"
            android:gravity="center"
            android:fontFamily="@font/open_sans_bold"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sign Up"
            android:padding="18dp"
            android:textSize="35sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            app:boxBackgroundColor="@color/white"
            android:focusableInTouchMode="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="Full Name"
                android:id="@+id/userName"
                android:inputType="text"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            app:boxBackgroundColor="@color/white"
            android:focusableInTouchMode="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:id="@+id/email"
                android:hint="Email_Address"
                android:drawableRight="@drawable/email"
                android:drawablePadding="10dp"
                android:inputType="textEmailAddress"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            app:passwordToggleEnabled="true"
            app:boxBackgroundColor="@color/white"
            android:focusableInTouchMode="true"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter_Password"
                android:drawableRight="@drawable/ic_lock_black_24dp"
                android:ems="10"
                android:id="@+id/pass"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            app:boxBackgroundColor="@color/white"
            android:focusableInTouchMode="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:ems="10"
                android:inputType="number"
                android:textSize="20sp"
                android:id="@+id/phone"

                android:layout_marginTop="5dp"
                />
        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:id="@+id/alreadyAccountBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:padding="3dp"
            android:text="Already have account?"
            android:textColor="#333333"
            android:layout_gravity="right"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/blue_btn"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:elevation="16dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:textStyle="bold">

        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

</androidx.cardview.widget.CardView>